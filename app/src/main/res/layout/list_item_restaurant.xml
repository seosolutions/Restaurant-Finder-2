<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/restaurant_image"
        android:padding="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_title"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Restaurant Name"
        android:layout_toEndOf="@id/restaurant_image"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_rating_image"
        android:padding="4dp"
        android:layout_toEndOf="@id/restaurant_image"
        android:layout_below="@id/restaurant_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_rating_value"
        android:padding="4dp"
        android:layout_toEndOf="@id/restaurant_rating_image"
        android:layout_below="@id/restaurant_title"
        tools:text="RatingValue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_address"
        android:padding="4dp"
        android:layout_toEndOf="@id/restaurant_image"
        android:layout_below="@id/restaurant_rating_image"
        tools:text="Address"/>
</RelativeLayout>